<body>

    <header>
      <div class="navbar navbar-dark bg-dark box-shadow">
        <div class="container d-flex justify-content-between">
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="/projects">Jamie Kiser</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
  
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/projects">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <% if user_signed_in? %>
                <a class="nav-link" href="/users/edit">Edit Account</a>
              <% else %>
                <a class="nav-link" href="/users/sign_in">Login</a>
              <% end %>
            </li>
            <li class="nav-item">
              <% if user_signed_in? %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'nav-link' %>
              <% else %>
                <a class="nav-link" href="/users/sign_up">Sign Up</a>
              <% end %>
            </li>
          </ul>
          <div class="form-inline my-2 my-lg-0">
            <% if user_signed_in? %>
              <a href="/projects/new" class="btn btn-info">New Project</a>
            <% end %>
          </div>
        </div>
      </nav>
        </div>
      </div>
    </header>

    <main role="main">
      <div class="jumbotron">
        <div class="container">
          <h1 class="display-3">Welcome!</h1>
          <p>My name is Jamie Kiser and this is my portfolio website. On this website, you can post projects you've completed in order to keep track of them or you can view other people's posted projects below!</p>
        </div>
      </div>
      
      <div class="container">
      <div class="row">
        <% @projects.each do |project| %>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <div class="card-body">
              <h3 class="card-title"><%= project.title %></h3>
                <p class="text-truncate" ><%= project.description %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-toolbar">
                    <%= link_to 'Show', project %>&nbsp;
                    <%= link_to 'Edit', edit_project_path(project) if user_signed_in? %>&nbsp;
                    <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } if user_signed_in? %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    </main>
