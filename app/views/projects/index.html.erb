<p id="notice"><%= notice %></p>

<h1>Projects</h1>
<%= link_to "Logout", destroy_user_session_path, method: :delete if user_signed_in? %>
<%= link_to "Edit Account", edit_user_registration_path if user_signed_in?%>
<%= link_to "Login", new_user_session_path unless user_signed_in? %>
<%= link_to "Sign up", new_user_registration_path unless user_signed_in?%>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) if user_signed_in? %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } if user_signed_in? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path if user_signed_in? %>
